<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.chc.appdev.teama.gradekeeper" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewGradebookActivity"
            android:label="@string/title_activity_course" >
        </activity>
        <activity android:name=".CreateCourse" >
        </activity>
        <activity android:name=".AddStudent" >
        </activity>
        <activity android:name=".AddAssignmentActivity" >
        </activity>
        <activity
            android:name=".GradeAssignmentActivity"
            android:label="@string/title_activity_assignment" >
        </activity>
        <activity
            android:name=".ViewCourseActivity"
            android:label="@string/title_activity_view_gradebooks"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".AddGradebookActivity"
            android:label="Add gradebook">
        </activity>
        <activity
            android:name=".StudentActivity"
            android:label="@string/title_activity_student"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".StudentsActivity"
            android:label="@string/title_activity_students"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
