<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.chc.appdev.teama.gradekeeper.AddGradebookActivity"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etName"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Gradebook name"
                android:inputType="textCapSentences|text"
                android:singleLine="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Meeting times"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add meeting time"
                android:id="@+id/btnAddMeeting"
                android:onClick="showDateTimePicker"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="276dp"
                android:id="@+id/lvMeetings"/>


        </LinearLayout>
</LinearLayout>
